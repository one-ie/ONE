---
import { GoogleFontsOptimizer } from "astro-google-fonts-optimizer";
import ThemeSwitcher from '@scripts/theme-switcher.astro'
import ThemeSwitchButtons from '@blocks/theme-switch-buttons.astro'
import '@styles/global.styl'

interface Props {
  title: string
}
const { title = 'ONE' } = Astro.props.frontmatter || Astro.props
---

<html data-theme="ONE" lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content="one" />
    <link rel="icon" type="image/svg+xml" href="/fav.png" />
     <GoogleFontsOptimizer url="https://fonts.bunny.net/css2?family=Inter:wght@200;400;500;700&display=swap" preconnectUrl="https://fonts.bunny.net" />
    <!-- Google Tag Manager -->
<script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
})(window,document,'script','dataLayer','GTM-WFW88J7C');</script>
<!-- End Google Tag Manager -->
    <ThemeSwitcher />
    <title>{title}</title>
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
<noscript><iframe src="https://www.googletagmanager.com/ns.html?id=GTM-WFW88J7C"
height="0" width="0" style="display:none;visibility:hidden"></iframe></noscript>
<!-- End Google Tag Manager (noscript) -->
    <section>
      <container>
        <slot />
      </container>
    </section>
  </body>
</html>
