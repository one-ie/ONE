---
import { buttonVariants } from "@/components/ui/button";
import { siteConfig } from "@/config/site";
import MainLayout from "@/layouts/main-layout.astro";
import { cn } from "@/lib/utils";
import { Icon } from "astro-icon/components";
import Features from "@/sections/features.astro";
import FaqSection from "@/components/faq-section";

---
<MainLayout title="ONE">
  <section class="space-y-6 pb-12 pt-16 lg:py-28">
    <div
      class="container flex max-w-[64rem] flex-col items-center gap-2 text-center"
    >
      <a
        href="https://twitter.com/tonyoconnell"
        class={cn(buttonVariants({ variant: "outline", size: "sm" }))}
        target="_blank"
      >
        Follow along on <Icon name="twitter" class="ml-2 size-4" />
      </a>

      <h1
        class="font-heading text-4xl font-bold sm:text-5xl md:text-6xl lg:text-7xl !leading-[1.1] text-balance"
      >
        <span class="text-gradient_indigo-purple">
          Accelerate <span class="font-sans font-bold">with</span> AI<span
            class="font-sans font-bold"></span>
        </span>
      </h1>

      <p
        class="max-w-[42rem] leading-normal text-muted-foreground sm:text-xl sm:leading-8 text-balance"
      >
        Own powerful AI that will transform your enterprise and your life. Your keys. Your data. Your code. Free and open. Forever. MIT Licensed.
      </p>
<br /><br />
      <div class="flex justify-center space-x-2 md:space-x-4">
        <a
          href="/docs/get-started/"
          class={cn(buttonVariants({ size: "lg" }))}
        >
          Get Started
        </a>
        <a
          href="/company/vision"
          class={cn(buttonVariants({ variant: "outline", size: "lg" }), "px-8")}
        >
           Our Vision
        </a>
      </div>
    </div>
      <Features />

  </section>
   <section>
    <div class="space-y-6 text-center mb-14">
      <h2 class="font-heading text-4xl text-center">
        Frequently Asked Questions
      </h2>
    </div>
<div class="relative container max-w-screen-md py-10">
    <FaqSection client:load />
    </div>
  </section> 


